!!!
%html
  %head
    %meta(charset="utf-8")
    %title= controller.controller_name + ': ' + controller.action_name
    %script(src="http://www.google.com/jsapi")
    :javascript
      google.load("jquery", "1.3.2");
      // google.load("jqueryui", "1.7.2");
      google.setOnLoadCallback(function() {
      });
    = javascript_include_tag %w(jquery.humanmsg.easing.min application)
    = stylesheet_link_tag 'screen'
  %body.bp
    .container
      %header.span-24.last
        %h1 Lucien
        %hr
      .span-24.last
        %ul
          %li= link_to "Books", books_path
          %li= link_to "Users", users_path
      .span-24.last
        = render_flash
        = yield
      %footer.span-24.last
        - if logged_in?
          %ul
            %li= link_to h(current_user.name), account_path
            %li= link_to "Log out", user_session_path, :method => :delete